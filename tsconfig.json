{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "game.js",
        "sourceMap": true,
        "target": "ES6"
    },
    "include": [
        "src/GameEngine/Core/**/*",
        "src/GameEngine/Components/**/*",
        "src/Pong/Components/**/*",
        "src/Pong/GameObjects/**/*",
        "src/Pong/game.ts"
    ]
}